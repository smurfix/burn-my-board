#!/bin/bash

set -ex

source helper/common

usage() {
    cat <<'___'
Usage: make_loader [destdir]

Creates the boot loader(s) for the device, including U-Boot if required.

___
    exit 1
}
if test $# -gt 0 ; then
    DEST="$1"
else
    DEST="$T/loader"
fi
sudo mkdir -p $DEST

source snips/$TARGET/make_loader

