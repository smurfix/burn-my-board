# Raspi 32bit

ARCH=arm
ARCH_PREFIX=arm
BIN_ARCH=armhf
DEB_ARCH=armhf
BIN_ARCH_PKG=gcc-arm-linux-gnueabihf
UBOOT_ARCH=arm
CROSS_COMPILE=arm-linux-gnueabihf-
#DTB=armada-3720-espressobin.dtb

PART_OFFSET=1

P_BOOT=1
P_ROOT=2

BOOT_SIZE=${BOOT_SIZE:-$(expr 300 \* 1024 \* 2)}
ROOT_SIZE=${ROOT_SIZE:-$(expr 800 \* 1024 \* 2)}

BOOT_START=8192
ROOT_START=$(expr ${BOOT_START} + ${BOOT_SIZE} + 16)
DEVICE_SIZE=$(expr ${ROOT_START} + ${ROOT_SIZE} + 82) # workaround for fdisk bug

