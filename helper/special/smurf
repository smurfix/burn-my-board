# APT helper for you

# You don't know this password, and even if you cracked it you can't use it
# to log onto my systems anyway. So there.
if sudo grep -qs "^root:*:" $R/etc/shadow ; then
    echo root:'$6$3p6oMizl$cPgeRCuM6f/5.7q5.NhYEXSQUQleNzYHxfwIseZD6z3fZp9Y7eaSE5ueeYIa98i9NF19y4hdEeL4j7DW9rYDW.' | sudo chpasswd -R $R -e
fi

sudo mkdir -p $R/root/.ssh
test -s $R/root/.ssh/authorized_keys || cat_to $R/root/.ssh/authorized_keys <<_
ssh-rsa  matthias@urlichs.de
_
